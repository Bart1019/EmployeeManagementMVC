@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary mb-3" style="width: auto">Add new role</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class ="card-header">
                Role id: @role.Id
            </div>
            <div class =" card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller ="Administration" asp-action="EditRoles" asp-route-id="@role.Id" class="btn btn-primary" style="width: auto">Edit</a>
                <a href="#" class="btn btn-danger" style="width: auto">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Click below to create a new role
            </h5>
            <a asp-controller ="Administration" asp-action ="CreateRole" class="btn btn-primary" style="width: auto">Create Role</a>
        </div>

    </div>
}

