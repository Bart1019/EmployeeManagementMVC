@model IEnumerable<EmployeeManagement.Domain.Models.Employee>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
    <h3>Welcome From The Index Action</h3>
    
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Surname</td>
                        <td>@employee.Department</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
    </html>